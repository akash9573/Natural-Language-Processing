import spacy
from nltk.corpus import wordnet as wn

# Step 1: Install and load the spaCy language model
# Run these commands in your terminal or Jupyter notebook:
# !pip install spacy
# !python -m spacy download en_core_web_sm

# Load the spaCy model
nlp = spacy.load("en_core_web_sm")

def get_noun_phrases(sentence):
    doc = nlp(sentence)
    noun_phrases = [chunk.text for chunk in doc.noun_chunks]
    return noun_phrases

def get_meaning(phrase):
    synsets = wn.synsets(phrase, pos=wn.NOUN)
    if synsets:
        return synsets[0].definition()
    else:
        return "Meaning not found"

def main(sentence):
    noun_phrases = get_noun_phrases(sentence)
    results = {}
    for phrase in noun_phrases:
        meaning = get_meaning(phrase)
        results[phrase] = meaning
    return results

# Example usage
sentence = "The quick brown fox jumps over the lazy dog."
result = main(sentence)

for phrase, meaning in result.items():
    print(f"Noun Phrase: {phrase}, Meaning: {meaning}")

